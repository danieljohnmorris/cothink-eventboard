<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
 "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
   	<title>The Business Diary</title>
	
	<link rel="stylesheet" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" type="text/css">
   	<link rel="stylesheet" type="text/css" href="<%= assets %>/css/grid24.css" media="screen" />
	<link rel="stylesheet" type="text/css" href="<%= assets %>/css/j-base.css" media="screen" />
	<link rel="stylesheet" type="text/css" href="<%= assets %>/css/style.css" media="screen" /> 
	
	<%= stylesheet_link_tag "application2" %>
	
	<%= javascript_include_tag 'jquery-1.4.1-min', 'rails', 'application' %>
	<%= javascript_include_tag 'jsl', 'rails', 'application' %>
  
  <%= csrf_meta_tag %>
	<%= yield :head %>

	<script type="text/javascript" src="<%= assets %>/js/jquery-1.3.2.min.js"></script>
	<script type="text/javascript" src="<%= assets %>/js/jquery.easing.1.3.js"></script>
	<script type="text/javascript" src="<%= assets %>/js/togglegrid.js"></script>  
</head>
<body>
<div id="doc4" class="yui-t7">
	<div id="hd" role="banner">
        <div class="yui-g">
           <div class="yui-u first" id="mast">
				<h1>
					<a id="go-home" href="/" title="Back to the homepage" name="go-home">
						<img class="logo" alt="The Business Diary" src="/images/logo.png">
					</a>
				</h1>
				<p id="strapline">All your business events are belong to us.</p>
           </div>
           <div class="yui-u" id="user">
				<%= render :partial => "layouts/auth_person" %>
           </div>
        </div>
	</div>
   	<div id="bd" role="main">
		<div class="yui-g">
	        <div id="messages">
				
				<%
				#<p class='info'>This is an info message</p>
				#<p class='error'>This is an error message</p>
				#<p class='success'>This is an success message</p>
				%>

				<%
				# DEVISE MESSAGES
				%>

	          <% if notice -%>
	          <p class='success'>
	            <%=h notice %>
	          </p>
	          <% end -%>

	          <% if alert -%>
	          <p class='error'>
	            <%=h alert %>
	          </p>
	          <% end -%>

				<%
				# FLASH MESSAGES
				%>
		
	          <% if flash[:error] -%>
	          <p class='error'>
	            <%=h flash[:error] %>
	          </p>
	          <% end -%>
          
	          <% if flash[:success] -%>
	          <p class='success'>
	            <%=h flash[:success] %>
	          </p>
	          <% end -%>
          
	          <% if flash[:info] -%>
	          <p class='info'>
	            <%=h flash[:info] %>
	          </p>
	          <% end -%>
	        </div>
        
	        <%= yield %>
		</div>
	</div>

   <div id="ft" role="contentinfo"><p>Footer</p></div>
</div>
<%= render :partial => 'layouts/uservoice' %>
<%= render :partial => 'layouts/google_analytics' %>
<%= javascript_include_rpx(person_session_url) %>
</body>
</html>