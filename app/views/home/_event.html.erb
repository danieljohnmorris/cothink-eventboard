<%= week %>
<li class="event">
  <div class="nontime">
    <h4><%=event.title %></h4>
    <ul class="data">
      <li><%= event.location %></p>
      <li><%= truncate_first_sentence(event.description,120,'...') %></p>
      <li><%= event.organisation.name %></p>
    </ul>
  </div>
  <div class="datetime">
    <span class="time"><%= event.start_time %><span class="ampm"><%= event.start_ampm %></span></span>
  </div>
  <%= calendar_page %>
</li>