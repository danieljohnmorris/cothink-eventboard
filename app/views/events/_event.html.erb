<%= week %>
<li class="event" id="event-<%= event.id %>">
  <div class="nontime">
    <h4>
		<span class="star">
		<% if person_signed_in? and event.starred?(current_person) %>
			<%= render :partial => 'events/link_unstar', :locals => { :event => event } %>
		<% else %>
			<%= render :partial => 'events/link_star', :locals => { :event => event } %>
		<% end %>
		</span>
		<%= link_to event.title, event_path(event) %>
	</h4>
    <p class="data">
		<span class="location"><%= event.location %> (<%= map_link(event.location) %>).</span>
		<span class="date"><%= event.start_date %></span>

		<% if event.organisation %>
			<span class="organiser">Organised by <%= link_to event.organisation.name, organisation_path(event.organisation) %>.</span>
		<% end %>

		<% unless event.topic_list.empty? %>
			Topics: <%= render :partial => "events/link_topic", :collection => event.topic_list, :as => :topic, :spacer_template => "shared/separator_comma" %>
		<% end %>
    </p>
  </div>
</li>